@model UserSelection
<div class="container d-flex flex-column justify-content-center align-items-center vh-100">
    <h3 class="mb-4 text-center">Here is a summary of your booking</h3>

    <div class="card shadow-lg rounded" style="max-width: 900px; width: 100%;">
        <div class="row g-0 align-items-center">
            <div class="col-md-4">
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/2/20/Riyadh_Skyline.jpg/1920px-Riyadh_Skyline.jpg"
                     class="img-fluid rounded-start"
                     alt="@Model.EventName">
            </div>
            <div class="d-flex justify-content-center p-3 w-100 gap-5">
                @* <form asp-action="EditUserSelection" method="get"> *@
                @*     <input type="hidden" name="bookingId" value="@Model.Id" /> *@
                @*     <button type="submit" class="btn btn-primary">Edit</button> *@
                @* </form> *@
                <form asp-action="EditUserSelection" method="get">
    <input type="hidden" name="bookingId" value="@Model.Id" />
    <button type="submit" class="btn btn-primary">Edit</button>
</form>

                <form asp-action="DeleteBooking" method="post" onsubmit="return confirm('Are you sure you want to delete this booking?');">
                    <input type="hidden" name="bookingId" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
           
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">Booking Summary</h5>
                    <p><strong>City:</strong> @Model.CityName</p>
                    <p><strong>Event:</strong> @Model.EventName</p>
                    <p><strong>Description:</strong> @Model.EventDescription</p>
                    <p><strong>Hotel:</strong> @Model.HotelName</p>
                    @* <p><strong>Room Type:</strong> @Model.RoomType</p> *@
                    @* <p><strong>Number of People:</strong> @Model.NumberOfPeople</p> *@
                    @* <p><strong>VIP:</strong> @(Model.IsVIP ? "Yes" : "No")</p> *@
                    @* <p><strong>Event Date:</strong> @Model.EventDate.ToString("yyyy-MM-dd")</p> *@
                    @* <p><strong>Total Price:</strong> @Model.TotalPrice.ToString("C")</p> *@

                    <div class="mt-3">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary btn-lg">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
