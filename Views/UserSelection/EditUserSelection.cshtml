@model UserSelection

<div class="container">
    <h3>Edit User Selection</h3>
    <form asp-action="EditUserSelection" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="CityName"></label>
            <select asp-for="CityName" class="form-control" asp-items="ViewBag.Cities"></select>
        </div>

        <div class="form-group">
            <label asp-for="EventName"></label>
            <select asp-for="EventName" class="form-control" asp-items="ViewBag.Events"></select>
        </div>

        <div class="form-group">
            <label asp-for="HotelName"></label>
            <select asp-for="HotelName" class="form-control" asp-items="ViewBag.Hotels"></select>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
    </form>
</div>
