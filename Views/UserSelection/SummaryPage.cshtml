
@model UserSelection

<div class="container d-flex flex-column justify-content-center align-items-center vh-100">
    <!-- العنوان -->
    <h3 class="mb-4 text-center">Here is a summary of your booking</h3>

    <div class="card shadow-lg rounded" style="max-width: 900px; width: 100%;">
        <div class="row g-0 align-items-center">
            <!-- قسم الصورة -->
            <div class="col-md-4">
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/2/20/Riyadh_Skyline.jpg/1920px-Riyadh_Skyline.jpg"
                     class="img-fluid rounded-start h-100"
                     alt="event summary">
            </div>
            <!-- قسم النصوص -->
            <div class="col-md-5">
                <div class="card-body">
                    <h5 class="card-title">Summary Booking</h5>
                    <p class="card-text">This is Selection.</p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                    <!-- زر تأكيد الحجز -->
                    <div class="mt-3">
                        <button class="btn btn-success w-100">Confirm Reservation</button>
                    </div>
                </div>
            </div>
            <!-- قسم الأيقونات -->
            <div class="col-md-3 text-center d-flex align-items-center justify-content-center">
                <ul class="list-group list-group-horizontal list-unstyled">
                    <li class="p-2">
                        <button class="btn btn-outline-primary btn-sm" title="Edit">
                            <i class="bi bi-pencil"></i>
                        </button>
                    </li>
                    <li class="p-2">
                        <button class="btn btn-outline-danger btn-sm" title="Delete">
                            <i class="bi bi-trash-fill"></i>
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>














