@model List<City>

@{

	ViewData["Title"] = "Home Page";
}

<head>
	<link rel="stylesheet" href="~/css/style.css?v=1" />
</head>

<div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000" style="height: 90vh;">
	<div class="carousel-inner" style="height: 100%;">
		<!-- Cities Header -->
		@foreach(var i in Model){
			<div class="carousel-item active" style="height: 100%; position: relative;">
				<img src="@i.ImageUrl" class="d-block w-100 h-100 object-fit-cover" alt="AlUla">
				<div class="position-absolute top-50 start-50 translate-middle text-white text-center">
					<h1 class="fw-bold display-1">@i.Title</h1>
					<p class="fs-4">@i.Description</p>
				</div>
			</div>
		}
	</div>
</div>



<section class="small-screen pattern m-auto d-flex align-items-center justify-content-center">
	<div class="row container-fluid p-4 d-flex">

		<!-- Images Section -->
	   <div class="col-lg-4">
	<h1 class="text-center fs-3 fw-bold">Our Events</h1>
	<div class="row justify-content-center">
		<!-- Left Column -->
		<div class="col-12 col-sm-5 d-flex flex-column align-items-center">
