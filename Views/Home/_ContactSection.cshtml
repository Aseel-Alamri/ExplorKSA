@model List<Developer>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<section class="vh-100 contact d-flex align-items-center justify-content-around">
    <div class="container">
        <h1 class="fs-1 fw-bold mb-4">Contact With Developer</h1>
        <div class="row g-4 z-5">
            @foreach (var developer in Model)
            {
                <div class="col-lg-4 col-sm-12">
                    <div class="card mb-3 d-flex justify-content-center align-items-center" style="width: 100%;">
                        <div class="card-body text-center">
                            <h5 class="fs-4">@developer.Role</h5>
                            <h5 class="card-title fs-3 fw-bold">@developer.Name</h5>
                            <ul class="d-flex justify-content-center gap-4 fs-1 list-unstyled">
                                <li>
                                    <a class="text-black" target="_blank" href="@developer.LinkedInUrl">
                                        <i class="fa-brands fa-linkedin"></i>
                                    </a>
                                </li>
                                <li>
                                    <a class="text-black" target="_blank" href="@developer.GitHubUrl">
                                        <i class="fa-brands fa-square-github"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
