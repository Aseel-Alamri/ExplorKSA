<div class="container-fluid vh-100 d-flex justify-content-center align-items-center position-relative">
    <!-- الخلفية -->
    <div style="background-image: url('https://media.assettype.com/sabq%2Fimport%2Fuploads%2Fmaterial-file%2F5e15a10b544a69dff28b4585%2F5e15a10804b91.jpg?w=1024&auto=format%2Ccompress&fit=max');
                background-size: cover;
                background-position: center;
                filter: blur(1px);
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                z-index: -1;">
    </div>

    <!-- الجدول مع القوائم المنسدلة -->
    <div class="container d-flex justify-content-center align-items-center mt-5">
        <table class="table table-bordered   opacity-75" style="width: 70%;background-color: rgba(211, 211, 211, 0.8)  backdrop-filter: blur(10px); ">
            <thead>
                <tr>
                    <th>Room Type</th>
                    <th>Number of Guests</th>
                    <th>Meals</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <select class="form-select " aria-label="Room Options" style=" background-color: rgba(211, 211, 211, 0.8) ; border-radius: 8px; color: black;">
                            <option selected disabled>Choose Room Type</option>
                            <option value="Single Room">Single Room</option>
                            <option value="Double Room">Double Room</option>
                            <option value="Family Suite">Family Suite</option>
                        </select>
                    </td>
                    <td>
                        <select class="form-select" aria-label="Number of Guests" style="background-color: rgba(211, 211, 211, 0.8); border-radius: 8px; color: black;">
                            <option selected disabled>Choose Number of Guests</option>
                            <option value="1">1 Guest</option>
                            <option value="2">2 Guests</option>
                            <option value="3">3 Guests</option>
                            <option value="4">4 Guests</option>
                        </select>
                    </td>
                    <td>
                        <select class="form-select" aria-label="Meals" style="background-color: rgba(211, 211, 211, 0.8); border-radius: 8px; color: black;">
                            <option selected disabled>Choose Meals</option>
                            <option value="Breakfast">Breakfast</option>
                            <option value="Breakfast, Dinner">Breakfast, Dinner</option>
                            <option value="All Meals">All Meals</option>
                        </select>
                    </td>
                    <td>
                        <select class="form-select" aria-label="Price" style="background-color: rgba(211, 211, 211, 0.8);  border-radius: 8px; color: black;">
                            <option selected disabled>Choose Price</option>
                            <option value="$50">Single Room - $50</option>
                            <option value="$90">Double Room - $90</option>
                            <option value="$150">Family Suite - $150</option>
                        </select>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
